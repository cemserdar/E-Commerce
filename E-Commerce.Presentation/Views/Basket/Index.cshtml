@model E_Commerce.Domain.Models.Basket

<h2>Sepetiniz</h2>

@if (Model.Items.Any())
{
    <table>
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Miktar</th>
                <th>Fiyat</th>
                <th>Toplam</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@(item.Price * item.Quantity).ToString("C")</td>
                    <td>
                        <a href="@Url.Action("RemoveFromBasket", "Basket", new { productId = item.ProductId })">
                            Ürünü Çıkar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Sepetinizde ürün bulunmamaktadır.</p>
}